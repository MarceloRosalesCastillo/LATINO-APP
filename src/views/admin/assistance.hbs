<div class="page-wrapper">
    <div class="page-container2">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="user-data m-b-30">
                        <h3 class="title-3 m-b-30">
                            <i class="zmdi zmdi-account-calendar"></i>ASISTENCIA :</h3>

                        <div class="table-responsive table-data">
                            <div class="table-responsive table-responsive-data2">
                                <table class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th style="margin-right: 150px;">
                                                <label class="au-checkbox">
                                                    <input type="checkbox">
                                                    <span class="au-checkmark"></span>
                                                </label>
                                            </th>
                                            <th>ID</th>
                                            <th style="width: 30%;">Estudiante</th>
                                            <th style="width: 20%;">Fecha</th>
                                            <th style="width: 30%;">Observaciones</th>

                                        </tr>
                                    </thead>
                                    {{#each students}}
                                    <tbody>
                                        <tr class="tr-shadow">
                                            <td>
                                                <label class="au-checkbox">
                                                    <input type="checkbox">
                                                    <span class="au-checkmark"></span>
                                                </label>
                                            </td>
                                            <td>{{id}}</td>
                                            <td>
                                                <span class="block-email" style="color: #04ac4a;">{{name}} {{lastname}}</span>
                                            </td>
                                            <td> <input disabled name="test" id="test" style="width: 50%;"> </td>
                                            <td> <textarea rows="2" cols="50" placeholder="Click para escribir"></textarea></td>
                                            <td>
                                                <div class="table-data-feature">
                                                    <button class="item" data-toggle="tooltip" data-placement="top"
                                                        title="Send">
                                                        <i class="zmdi zmdi-mail-send"></i>
                                                    </button>
                                                    <button onclick="window.location.href='/admin/edit/{{id}}'" class="item"
                                                        data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <i class="zmdi zmdi-edit"></i>
                                                    </button>
                                                    <button onclick="window.location.href='/admin/delete/{{id}}'" class="item"
                                                        data-toggle="tooltip" data-placement="top" title="Delete">
                                                        <i class="zmdi zmdi-delete"></i>
                                                    </button>
                                                    <button class="item" data-toggle="tooltip" data-placement="top"
                                                        title="More">
                                                        <i class="zmdi zmdi-more"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="spacer"></tr>
                                    </tbody>
                                    {{/each}}
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="btn-centrado">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fa fa-dot-circle-o"></i> Firmar Asistencia
                    </button>

                </div>
            </div>
        </div>
    </div>
    <script>
        var options = { year: 'numeric', month: 'numeric', day: 'numeric' };
        options.timeZone = 'UTC';
        datenow = new Date(Date.now()).toLocaleString('es-LAT', options);
        document.getElementById("test").value = datenow;
    </script>