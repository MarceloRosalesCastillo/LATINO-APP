                    <div class="container-fluid">
                        <div class="columna-derecha">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>TU INFORMACIÓN</strong>
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/add" method="POST">
                                            <br>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">Username :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <button type="button" class="btn btn-success btn-xs">CREATE</button>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Nombres :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input required="" type="text" id="text-input" name="studentname" placeholder="Nombres" class="form-control">
                                                    <small class="form-text text-muted">Nombres, solo letras.</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Apellidos :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input required="" type="text" id="text-input" name="studentlastname" placeholder="Apellidos" class="form-control">
                                                    <small class="help-block form-text">Apellidos, solo letras.</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Dirección :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input required="" type="text" id="text-input" name="studentaddress" placeholder="Dirreción" class="form-control">
                                                    <small class="help-block form-text">Puede poner una referencia.</small>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Telefono :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input required="" maxlength="10" type="tel" id="text-input" name="studentphone" placeholder="Celular" class="form-control"
                                                    onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;">
                                                    <small class="help-block form-text">Ingresa tu Número de celular.</small>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Fecha de Nacimiento:</label>
                                                </div>
                                                <div class="input-group">
                                                    <input required="" minlength="2" style="width: 100px; left: 15px;"type="text" id="datepick" name="Day" placeholder="Día" class="form-control"
                                                    onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;"
                                                    maxlength="2">
                                                    <input required="" minlength="2" style="width: 100px;left: 20px;"type="text" id="datepick" name="Month" placeholder="Mes" class="form-control"
                                                    onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;"
                                                    maxlength="2">
                                                    <input required="" minlength="2" style="width: 100px;left: 25px;"type="text" id="datepick" name="Year" placeholder="Año" class="form-control"
                                                    onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;"
                                                    maxlength="4">
                                                  
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">Email :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input required="" type="email" id="email-input" name="email" placeholder="Email" class="form-control">
                                                    <small class="help-block form-text">Por favor ingresa tu email.</small>
                                                </div>
                                            </div>

                                    </div>

                                </div>

                            </div>

                        </div>

