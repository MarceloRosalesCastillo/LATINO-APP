                                                    <input required="" type="text" id="text-input" name="nom_tut" placeholder="Nombres" class="form-control">
                                                    <small class="form-text text-muted">Nombres, solo letras.</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Apellidos :</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input required="" type="text" id="text-input" name="ap_tut" placeholder="Apellidos" class="form-control">
                                                    <small class="help-block form-text">Apellidos, solo letras.</small>
