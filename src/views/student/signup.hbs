
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="/">
                                <img class="img-responsive" style="align-items: right;" src="img/loginlog.png">
                            </a>
                        </div>
                        {{>messages}}
                        <div class="login-form">
                            <form action="/signup" method="POST" onsubmit="if(document.getElementById('agree').checked) { return true; } else { alert('Por favor acepta los términos de y condiciones.'); return false; }">
                             <div class="form-group">
                                    <label>Name</label>
                                    <input required="" class="au-input au-input--full" type="text" name="name" placeholder="Name" autofocus>
                                </div>
                                 <div class="form-group">
                                    <label>Lastname</label>
                                    <input required="" class="au-input au-input--full" type="text" name="lastname" placeholder="Lastname" autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Username</label>
                                    <input required="" class="au-input au-input--full" type="text" name="username" placeholder="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input  required="" class="au-input au-input--full" type="email" name="email" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input required="" class="au-input au-input--full" type="password" name="password" placeholder="Password">
                                </div>
                                <div class="login-checkbox" style="margin-bottom: 15px;">
                                    <label>
                                        <input type="checkbox" name="aggree" id="agree">Aceptar Términos y condiciones.
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Registrarse</button>
                                <div class="social-login-content">
                                    <div class="social-button">
                                        {{!-- <button class="au-btn au-btn--block au-btn--blue m-b-20">Registrarse con Facebook</button>
                                        <button class="au-btn au-btn--block au-btn--blue2">Registrarse con Gmail</button> --}}
                                    </div>
                                </div>
                            </form>
                            <div class="register-link">
                                <p>
                                    ¿Ya tienes una cuenta?
                                    <a href="#">Entrar</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

